@{
    ViewBag.Title = "Calculate your grade";
}
@model _413_Assignment_1.Models.GradeCalculatorModel
<body>   
    <!--form to calculate grades based on user input-->
    <h3>Grade Calculator</h3>
    <form method="post">
        <label >Assignments</label>
        <input id="assignments" asp-for="assignments" />
        <br /><br />
        <label >Group Projects</label>
        <input id="groupProjects" asp-for="groupProjects" />
        <br /><br />
        <label >Quizzes</label>
        <input id="quizzes" asp-for="quizzes" />
        <br /><br />
        <label >Exams</label>
        <input id="exams" asp-for="exams" />
        <br /><br />
        <label >INTEX</label>
        <input id="intex" asp-for="intex" />
        <br /><br />
        <input type="submit" value="Calculate" id="submit"/>
        <div asp-validation-summary="All"></div>
    </form>
